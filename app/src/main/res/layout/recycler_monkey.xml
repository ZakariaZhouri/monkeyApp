<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/monkey_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_monkey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/monkey_id"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="TEST"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/monkey_image"
        app:layout_constraintLeft_toRightOf="@+id/monkey_image"
        app:layout_constraintTop_toTopOf="@+id/monkey_image" />

    <TextView
        android:id="@+id/monkey_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="TEST"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/monkey_id"
        app:layout_constraintLeft_toRightOf="@+id/monkey_id"
        app:layout_constraintTop_toTopOf="@+id/monkey_id" />

    <Button
        android:id="@+id/feed_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:text="@string/feed"
        app:layout_constraintLeft_toLeftOf="@id/monkey_image"
        app:layout_constraintTop_toBottomOf="@id/monkey_name" />

    <Button
        android:id="@+id/show_information_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:text="@string/monkey_informatio"
        app:layout_constraintLeft_toRightOf="@id/feed_btn"
        app:layout_constraintTop_toTopOf="@id/feed_btn" />


</android.support.constraint.ConstraintLayout>